{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "es5",
            "es2015"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "strict": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
